# Neo4j データベース接続設定
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j  # Neo4j Desktopで作成したデータベース名を指定

# Ollama 設定
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=120

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/inheritance.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# アプリケーション設定
APP_ENV=development
APP_DEBUG=false
APP_NAME=inheritance-calculator

# Neo4jスキーマ設定
NEO4J_AUTO_CREATE_CONSTRAINTS=true
NEO4J_AUTO_CREATE_INDEXES=true

# Ollama生成パラメータ
OLLAMA_TEMPERATURE=0.7

# エージェント設定
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=60

# 出力設定
OUTPUT_DIR=output
OUTPUT_FORMAT=json
ENABLE_RICH_OUTPUT=true

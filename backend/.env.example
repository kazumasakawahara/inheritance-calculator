# FastAPI設定
APP_NAME=inheritance-calculator-backend
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# サーバー設定
HOST=0.0.0.0
PORT=8000

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Neo4j接続設定
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=inheritance123
NEO4J_DATABASE=inheritance-db

# Ollama設定
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=120
OLLAMA_TEMPERATURE=0.7

# JWT認証設定
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log
